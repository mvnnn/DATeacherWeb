<!DOCTYPE html>
<html>
<head>
<% include Head.ejs %>
</head>

<body>
<% include StudentNavbar.ejs %>

<script>
var x = document.getElementById("studentlist");
x.className = "active";
</script>

<div id="menu2">
<div class="w3-box-center-table">
<table class="w3-table w3-striped w3-bordered w3-border w3-hoverable">
    <thead>
    <tr class="w3-light-grey">
      <th class="w3-grey">ID</th>
      <th class="w3-grey">Comment</th>
    </tr>
    </thead>

    <% if(data) {%>
      <% for(var i=0; i < data.length; i++) { %>
    <tr>
      <form method="post" name="form">
      <input type="hidden" name="index" value= "<%= i %>" >
      <input type="hidden" name="ID" value= "<%= data[i].std_id%>" >
      <td><p class="w3-input w3-border w3-third" name="std_ID"><%= data[i].std_id%></p></td>
      <td><input class="w3-input w3-border w3-twothird" type="text" placeholder="Comment here" name="data"> &nbsp; <input class="w3-button w3-padding" type="submit" value="Post"></td>
      </form>
    </tr>
    <% } %>
    <% } %>

</table>

</div>


<% include Footer.ejs %>

</body>
</html>
